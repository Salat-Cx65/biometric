<resources>
    <style name="Theme.CustomDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowEnterAnimation">@anim/move_in</item>
        <item name="android:windowExitAnimation">@anim/move_out</item>
    </style>
    <style name="DialogContent">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/move_in</item>
        <item name="android:windowExitAnimation">@anim/move_out</item>
    </style>
</resources>